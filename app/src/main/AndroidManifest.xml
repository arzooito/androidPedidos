<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.almerimatik.pedidostienda">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo72"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo72"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MenuPrincipalActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activity.CatalogoActivity"
            android:label="@string/title_activity_catalogo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.HistorialActivity"
            android:label="@string/title_activity_historial"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ListasActivity"
            android:label="@string/title_activity_listas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ListaActivity"
            android:label="@string/title_activity_lista"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.CarritoActivity"
            android:label="@string/title_activity_carrito"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>